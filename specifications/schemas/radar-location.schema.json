{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "RadarLocation",
  "type": "object",
  "required": ["id", "latitude", "longitude", "type"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Identifiant du radar"
    },
    "latitude": {
      "type": "number",
      "minimum": -90,
      "maximum": 90
    },
    "longitude": {
      "type": "number",
      "minimum": -180,
      "maximum": 180
    },
    "type": {
      "type": "string",
      "enum": ["FIXE", "FEU_ROUGE", "TRONCON"]
    }
  }
}